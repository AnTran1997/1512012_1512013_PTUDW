{{#section 'js'}}
    <script>
        
        function editThui() {
            var modal = document.getElementById('editModal');
            var icon = document.getElementsByClassName("editClose")[0];
            var editBtn = document.getElementById('editBtn');
            modal.style.display = "block";
            icon.onclick = function() {
                modal.style.display = "none";
            }
            editBtn.onclick = function() {
                modal.style.display = "none";
            }

            window.onclick = function(event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        }
    </script>

{{/section}}


{{#section 'controlBar'}}{{> adminShowProductControllBar}}{{/section}}
{{#section 'searchBar'}}{{> adminHeader}}{{/section}}
{{#section 'showCharts'}}{{> adminShowCharts}}{{/section}}
{{#section 'addProduct'}}{{> addNewProduct}}{{/section}}
