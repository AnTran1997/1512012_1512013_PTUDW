                <!-- **************************  ADD NEW PRODUCTS  ********************** -->
                <div id="myModal" class="modal">
                    <div class="modal-content">
                        <button id="closeFormBtn"><i class="fa fa-close"></i></button>
                        <form action="" method="GET" role="form">
                            <label for="namePro">Tên sản phẩm</label><br>
