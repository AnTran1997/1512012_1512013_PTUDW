{{#section 'title'}}
Trang chủ
{{/section}}

{{#section 'css'}}
     <link rel="stylesheet" type="text/css" media="screen" href="/assets/css/styleAdmin/styleAdmin.css" />
{{/section}}

{{#section 'js'}}
    <script>
         getChartOfBrand(["Canon", "Nikon", "Fujifilm", "Sony"], [24, 15, 43, 18]);
         getChartOfType(["Máy cơ", "Kỹ thuật số", "Máy lấy liền"], [24, 48, 28]);
         getChartOfOrders(["Delivered", "Delivering", "In Stock"], [16, 31.6, 52.4]);
    </script>
{{/section}}


{{#section 'footer'}}
    <script src="/assets/js/javaScript_AdminPage.js"></script>
{{/section}}


{{#section 'controlBar'}}{{> adminShowProductControllBar}}{{/section}}
{{#section 'searchBar'}}{{> adminHeader}}{{/section}}
{{#section 'showCharts'}}{{> adminShowCharts}}{{/section}}
{{#section 'addProduct'}}{{> addNewProduct}}{{/section}}
{{#section 'editProduct'}}{{> editForm}}{{/section}}

    <div class="dashboard">
        <div class="row">
            <div class="col-sm-3" style="background-color: #000033">
              {{{_sections.controlBar}}}
            </div>
           
            <div class="col-sm-9">
               {{{_sections.searchBar}}}

                <!-- **************************  SHOW LIST OF ORDERS IN DATE ********************** -->
                <div class="listDateOrder isDisplayed">
                    {{#each orderDate}}
                    <div class="date">
                        <div class="backgroundTitle" style="background-color:#ff6699;">
                            <h1>{{date}}</h1>
                        </div>
                        <div class="triangle-right" style="border-left: 50px solid #ff6699;"></div>
                        <table class="dateOrder">
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Tổng số lượng sản phẩm</th>
                                <th>Tổng tiền (vnđ)</th>
                                <th>User mua hàng</th>
                                <th>Trạng thái đơn hàng</th>
                                <th>Phí vận chuyển</th>
                            </tr>
                            {{#each orders}}
                            <tr>
                                <td>{{orderID}}</td>
                                <td>{{totalProduct}}</td>
                                <td>{{totalPrice}}</td>
                                <td>{{username}}</td>
                                <td>{{orderStatusID}}</td>
                                <td>{{deliveryPrice}}</td>
                            </tr>
                            {{/each}}
                        </table>
                    </div>
                    {{/each}} 
                </div>

                <!-- **************************  ADD NEW PRODUCTS  ********************** -->
                {{{_sections.addProduct}}}

                <!-- **************************  SHOW CHARTS  *********************** -->
                {{{_sections.showCharts}}}
                
                <!-- **************************  SHOW ACCOUNT  ********************** -->
                <div class="showAccount isDisplayed">
                    <h1>Your profile!</h1>
                    <form action="">
                        <label for="fullName">Họ tên</label><br>
                        <input type="text" value="Monkey D.Luffy" name="fullName"><br><br>
            
                        <label for="email">Email</label><br>
                        <input type="text" name="email" value="luffy@gmail.com"><br><br>
            
                        <label for="numberPhone">Số điện thoại</label><br>
                        <input type="text" name="numberPhone" value="0123456789"><br><br>
            
                        <label for="gender">Giới tính</label><br>
                        <select name="gender">
                            <option value="nam">Nam</option>
                            <option value="nu">Nữ</option>
                        </select><br><br>
            
                        <label for="uname">Username</label><br>
                        <input type="text" name="uname" value="the_pirate_king"><br><br>
            
                        <label for="pass">Password</label><br>
                        <input type="submit" name="pass" value="Change password"><br><br>
                    </form>
                </div>

            </div>
        </div>
    </div>

