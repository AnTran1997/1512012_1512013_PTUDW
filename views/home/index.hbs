<div class="view-all" id="all">
  <div class="container">
    <h2 class="view-title">Xem <span>tất cả</span></h2>
    <div class="view-content row">
      <div class="col-sm-4 view-cat">
        <ul class="view-cat-list">
          <li class="view-cat-item">
            <h3>
              <i class="fa fa-camera-retro"></i>
              <span>Loại Sản Phẩm</span>
              <div class="expand">+</div>
              <div class="shrink">-</div>
            </h3>
            <ul class="view-cat-sub-list">
              <li class="view-cat-sub-item"><input type="checkbox"><span>Máy ảnh cơ</span></li>
              <li class="view-cat-sub-item"><input type="checkbox"><span>Máy ảnh kĩ thuật số</span></li>
              <li class="view-cat-sub-item"><input type="checkbox"><span>Máy ảnh lấy liền</span></li>
            </ul>
          </li>
          <li class="view-cat-item">
            <h3>
              <i class="fa fa-cogs"></i>
              <span>Nhà Sản Xuất</span>
              <div class="expand">+</div>
              <div class="shrink">-</div>
            </h3>
            <ul class="view-cat-sub-list">
              <li class="view-cat-sub-item"><input type="checkbox"><span>Canon</span></li>
              <li class="view-cat-sub-item"><input type="checkbox"><span>Fujifilm</span></li>
              <li class="view-cat-sub-item"><input type="checkbox"><span>Sony</span></li>
              <li class="view-cat-sub-item"><input type="checkbox"><span>Nikon</span></li>
            </ul>
          </li>
          <li class="view-cat-item active">
            <h3>
              <i class="fa fa-cubes"></i>
              <span>Tất Cả</span>
            </h3>
          </li>
        </ul>
      </div>
      <div class="col-sm-8 view-list">
        <div class="view-list-pagination">
          {{#each (for page)}}
          <div class="dot"><a href="http://localhost:3000/home/all/{{math @index "+" 1}}#all">{{math @index "+" 1}}</a></div>
          {{/each}}
        </div>
        <div class="view-list-content">
          {{#each currentAll}}
          <div class="view-item product-item">
            <a href="pages/DetailPages/singlepage-1.html" class="view-all-item">
              <div class="thumbnail"><img src="http://localhost:3000/assets/images/Products/{{productImg}}" alt=""></div>
              <div class="view-all-name">{{productName}}</div>
              <div class="view-all-price">{{numberFormat productPrice}} VND</div>
