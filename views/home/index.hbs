<div class="view-all" id="all">
  <div class="container">
    <h2 class="view-title">Xem <span>tất cả</span></h2>
    <div class="view-content row">
      <div class="col-sm-4 view-cat">
        <ul class="view-cat-list">
          <li class="view-cat-item cat">
            <h3>
              <i class="fa fa-camera-retro"></i>
              <span>Loại Sản Phẩm</span>
              <div class="expand">+</div>
              <div class="shrink">-</div>
            </h3>
            <ul class="view-cat-sub-list">
              {{#each cat}}
                <li class="view-cat-sub-item"><input type="radio" name="type" class="{{catID}}"><a href="/home/cat/{{catID}}/{{../currentPage}}#all"><span>{{catName}}</span></a></li>
              {{/each}}
            </ul>
          </li>
          <li class="view-cat-item brand">
            <h3>
              <i class="fa fa-cogs"></i>
              <span>Nhà Sản Xuất</span>
              <div class="expand">+</div>
              <div class="shrink">-</div>
            </h3>
            <ul class="view-cat-sub-list">
              {{#each brand}}
                <li class="view-cat-sub-item"><input type="radio" name="brand" class="{{brandID}}"><a href="/home/brand/{{brandID}}/{{../currentPage}}#all"><span>{{brandName}}</span></a></li>
              {{/each}}
            </ul>
          </li>
          <li class="view-cat-item all active">
            <a href="/home/all/none/{{currentPage}}#all">
              <h3>
                <i class="fa fa-cubes"></i>
                <span>Tất Cả</span>
              </h3>
            </a>
          </li>
        </ul>
      </div>
      <div class="col-sm-8 view-list">
        <div class="view-list-pagination">
          {{#each (for page)}}
          <a href="/home/{{../currentFilter}}/{{../currentFilterOption}}/{{math @index "+" 1}}#all"><div class="dot">{{math @index "+" 1}}</div></a>
          {{/each}}
        </div>
        <div class="view-list-content">
          {{#each currentAll}}
          <div class="view-item product-item">
            <a href="/product/detail/{{productID}}" class="view-all-item">
              <div class="thumbnail"><img src="/assets/images/Products/{{productImg}}" alt=""></div>
              <div class="view-all-name">{{productName}}</div>
              <div class="view-all-price">{{numberFormat productPrice}} VND</div>
            </a>
            <button class="add">
              <i class="fa fa-shopping-cart"></i>
            </button>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

